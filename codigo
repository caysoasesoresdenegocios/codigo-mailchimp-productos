<script type='text/javascript'>
//URL A LA QUE SE REDIRECCIONA UNA VEZ LLENADO EL FORMULARIO
var url = "https://www.cayso.com.mx/cursosenlinea/gracias-en-breve-te-contactaremos/";

function suscribir()
{
	setTimeout(redirec, 3000);
}

function redirec()
{
	var nodo = document.getElementById("mce-success-response");
	var textContent = nodo.textContent;
	if(textContent === '¡Gracias por suscribirse!')
	{
		window.location.href = url;
	}
}
</script>
